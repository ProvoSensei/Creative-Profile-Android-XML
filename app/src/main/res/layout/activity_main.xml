<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/activity_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="sans-serif"
        android:text="Hello."
        android:textColor="#ffffff"
        android:textSize="72dp"
        android:id="@+id/helloTV"/>

    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:visibility="visible"
        android:layout_below="@id/helloTV"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/strip"/>
    
    <android.support.v7.widget.CardView
        android:layout_width="294dp"
        android:layout_height="202dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/strip"
        android:layout_marginTop="49dp"
        app:cardCornerRadius="9dp"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            >

            <TextView
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medim"
                android:text="Hi, I'm Luthfi"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="26dp"
                android:id="@+id/nameTV"

                />

            <TextView
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:textColor="#ffffff"
                android:text="I'm Informatics Engineering student. I do UI/UX and code."
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_below="@id/nameTV"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/below_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:src="@drawable/down_button" />


</RelativeLayout>